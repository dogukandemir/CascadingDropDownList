@{
}

@Html.DropDownListFor(m => m.SelectedCountry, Model.Countries, "Please select country", new { onchange="submit();" })
<br />
@if (Model.Regions is { Count: > 0 })
{
    @Html.DropDownListFor(m => m.SelectedRegion, Model.Regions, "Please select region", new {onchange = "submit();"})
    <br />

    @if (Model.Cities is { Count: > 0 })
    {
        @Html.DropDownListFor(m => m.SelectedCity, Model.Cities, "Please select city")
        <br />
    }
}